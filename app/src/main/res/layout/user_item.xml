<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.activitys.MainActivity">

    <data>
        <variable
            name="user"
            type="com.example.githubusers_testecriar_yago.models.User" />

        <variable
            name="imageUrl"
            type="String" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@{imageUrl}"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="16dp"
                app:profileImage="@{imageUrl}"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_login"
                android:text="@{user.login}"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.html_url}"
                android:id="@+id/person_age"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_below="@+id/user_login"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</layout>